{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDirs": ["src"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["../../../shared/types", "../../node_modules/@types"], 
  },
  "include": ["src/**/*", "shared/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
